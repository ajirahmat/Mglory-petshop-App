<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/produkImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/nama_produk"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/produkImage"
            android:layout_toRightOf="@+id/produkImage"
            android:padding="5dp"
            android:text="title produk" />

        <TextView
            android:id="@+id/harga_produk"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_produk"
            android:layout_toEndOf="@+id/produkImage"
            android:layout_toRightOf="@+id/produkImage"
            android:padding="2dp"
            android:text="harga produk"
            android:textSize="12sp" />

    </RelativeLayout>

</LinearLayout>