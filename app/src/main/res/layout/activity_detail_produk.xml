<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aji.userpc.mglory_petshop.DetailProduk">

    <ImageView
        android:id="@+id/PdImage"
        android:layout_width="213dp"
        android:layout_height="177dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PdNama"
        android:layout_width="207dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/PdImage"
        android:layout_alignRight="@+id/PdImage"
        android:layout_centerVertical="true"
        android:text="Nama Produk"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PdImage" />

    <TextView
        android:id="@+id/PdHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PdNama"
        android:layout_alignStart="@+id/PdNama"
        android:layout_below="@+id/PdNama"
        android:text="Harga Produk"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PdNama" />

    <TextView
        android:id="@+id/PdDeskripsi"
        android:layout_width="203dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/PdHarga"
        android:layout_alignStart="@+id/PdHarga"
        android:layout_below="@+id/PdHarga"
        android:layout_marginTop="13dp"
        android:text="Deskripsi"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="322dp" />

    <ImageButton
        android:id="@+id/ButtonAddCart"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/PdNama"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/PdImage"
        android:layout_toRightOf="@+id/PdImage"
        app:srcCompat="@drawable/ic_add_cart"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>
