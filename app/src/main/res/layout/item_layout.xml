<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/produkImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/title_produk"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/produkImage"
            android:layout_toRightOf="@+id/produkImage"
            android:padding="5dp"
            android:text="title produk" />

        <TextView
            android:id="@+id/harga_produk"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_produk"
            android:layout_toEndOf="@+id/produkImage"
            android:layout_toRightOf="@+id/produkImage"
            android:padding="2dp"
            android:text="harga produk"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_above="@+id/ratingBar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_add_cart"
            tools:ignore="VectorDrawableCompat" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/customRatingBar"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_below="@+id/harga_produk"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/produkImage"
            android:layout_toRightOf="@+id/produkImage"
            android:numStars="5"
            android:padding="5dp"
            android:rating="2"
            android:stepSize="1" />

    </RelativeLayout>

</android.support.v7.widget.CardView>